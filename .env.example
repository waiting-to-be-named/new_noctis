# NOCTIS DICOM Viewer Environment Configuration
# Copy this file to .env and update with your values

# Django Settings
DJANGO_SECRET_KEY=your-very-secure-secret-key-here-change-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
DJANGO_ADMIN_PASSWORD=secure-admin-password

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=noctis_db
DB_USER=noctis_user
DB_PASSWORD=secure-database-password
DB_HOST=db
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/1
REDIS_HOST=redis
REDIS_PORT=6379

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# DICOM Settings
DICOM_SCP_AE_TITLE=NOCTIS_SCP
DICOM_SCP_PORT=11112
DICOM_STORAGE_PATH=/app/media/dicom_files
MAX_DICOM_FILE_SIZE=5368709120  # 5GB in bytes

# Storage Settings
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles
FILE_UPLOAD_MAX_MEMORY_SIZE=104857600  # 100MB
DATA_UPLOAD_MAX_MEMORY_SIZE=5368709120  # 5GB

# Performance Settings
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=300
CELERY_WORKERS=4
CELERY_MAX_TASKS_PER_CHILD=1000

# Monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# SSL Certificate Paths (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Let's Encrypt Settings
LETSENCRYPT_EMAIL=admin@your-domain.com
LETSENCRYPT_DOMAINS=your-domain.com,www.your-domain.com

# Container Registry (if using private registry)
DOCKER_REGISTRY=
DOCKER_USERNAME=
DOCKER_PASSWORD=